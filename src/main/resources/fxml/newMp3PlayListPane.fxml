<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="150.0" maxWidth="400.0" minHeight="150.0" minWidth="400.0" prefHeight="150.0" prefWidth="400.0"
            styleClass="new-mp3-pane" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pl.example.mp3player.controller.NewMp3PlayListPaneController">
    <children>
        <VBox styleClass="visible-background" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <ToolBar fx:id="mainToolBar" maxWidth="400.0" minWidth="0.0" nodeOrientation="RIGHT_TO_LEFT"
                         prefWidth="0.0" styleClass="main-bar">
                    <items>
                        <Button id="button-close" fx:id="closeButton" mnemonicParsing="false" prefHeight="13.0"
                                prefWidth="13.0">
                            <cursor>
                                <Cursor fx:constant="HAND"/>
                            </cursor>
                            <font>
                                <Font size="1.0"/>
                            </font>
                            <padding>
                                <Insets left="10.0" right="10.0"/>
                            </padding>
                        </Button>
                    </items>
                </ToolBar>
                <HBox alignment="CENTER" maxHeight="62.0" maxWidth="400.0" minHeight="62.0" minWidth="400.0"
                      prefHeight="62.0" prefWidth="400.0" styleClass="transparent-background">
                    <children>
                        <Label styleClass="all-label" text="Name of playlist:">
                            <padding>
                                <Insets right="50.0"/>
                            </padding>
                        </Label>
                        <TextField styleClass="new-mp3-text-field" fx:id="nameOfPlaylistTextField" maxWidth="200.0"
                                   minWidth="200.0"
                                   prefWidth="200.0"/>
                    </children>
                </HBox>
                <HBox alignment="CENTER" maxHeight="62.0" maxWidth="400.0" minHeight="62.0" minWidth="400.0"
                      prefHeight="62.0" prefWidth="400.0" styleClass="transparent-background">
                    <children>
                        <Button styleClass="all-label" fx:id="acceptButton" maxWidth="150.0" minWidth="150.0"
                                mnemonicParsing="false"
                                prefWidth="150.0" text="Accept">
                            <HBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </HBox.margin>
                        </Button>
                        <Button styleClass="all-label" fx:id="cancelButton" maxWidth="100.0" minWidth="100.0"
                                mnemonicParsing="false"
                                prefWidth="100.0" text="Cancel">
                            <HBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
